{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "options": {
    "env": {
      "LD_LIBRARY_PATH": "${workspaceFolder}/bin/x64/Release"
    }
  },
  "tasks": [
    {
      "label": "clear",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "rm",
      "args": [
        "-rf",
        "bin"
      ],
      "problemMatcher": []
    },
    {
      "label": "mkdir",
      "type": "shell",
      "command": "mkdir",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "args": [
        "-p",
        "bin"
      ]
    },
    {
      "label": "Configure Debug",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/bin"
      },
      "command": "cmake .. -DCMAKE_BUILD_TYPE=Debug",
      "dependsOn": [
        "mkdir"
      ],
      "problemMatcher": []
    },
    {
      "label": "Configure Release",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/bin"
      },
      "command": "CFLAGS='-march=native' CXXFLAGS='-march=native' cmake .. -DCMAKE_BUILD_TYPE=Release",
      "dependsOn": [
        "mkdir"
      ]
    },
    {
      "label": "Configure Mixed",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/bin"
      },
      "command": "cmake .. -DCMAKE_BUILD_TYPE=Mixed",
      "dependsOn": [
        "mkdir"
      ]
    },
    {
      "label": "Compile Debug",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/bin"
      },
      "command": "make -j${CPU_COUNT}",
      "dependsOn": [
        "mkdir",
        "Configure Debug"
      ]
    },
    {
      "label": "Compile Release",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/bin"
      },
      "command": "make -j${CPU_COUNT}",
      "dependsOn": [
        "mkdir",
        "Configure Release"
      ],
      "problemMatcher": []
    },
    {
      "label": "Compile Mixed",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/bin"
      },
      "command": "make -j${CPU_COUNT}",
      "dependsOn": [
        "mkdir",
        "Configure Mixed"
      ]
    },
    {
      "label": "Compile",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/bin"
      },
      "command": "make -j${CPU_COUNT}",
      "dependsOn": [
        "mkdir"
      ]
    },
    {
      "label": "Run GlobalWar Release",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/bin/x64/Release"
      },
      "command": "LD_LIBRARY_PATH=\"${workspaceFolder}/bin/x64/Release\" ./xr_3da -nointro -dbg -dump_bindings -fsltx /run/media/ruut/99c9b836-a7b8-403c-9ef8-5bfc1e1ec831/games/stalker/GlobalWar1/fsgame.ltx",
      "problemMatcher": []
    },
    {
      "label": "Run CoC Mixed",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/bin/x64/Mixed"
      },
      "command": "./xr_3da -nointro -fsltx ${COC_LTX_FILE_PATH}",
      "problemMatcher": []
    },
    {
      "label": "Run CoC Release",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/bin/x64/Release"
      },
      "command": "LD_LIBRARY_PATH=\"${workspaceFolder}/bin/x64/Release\" ./xr_3da -nointro -dbg -fsltx ${COC_LTX_FILE_PATH}",
      "problemMatcher": []
    },
    {
      "label": "Run CoP Mixed",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/bin/x64/Mixed"
      },
      "command": "./xr_3da -nointro -fsltx ${COP_LTX_FILE_PATH}",
      "problemMatcher": []
    },
    {
      "label": "Run CoP Release",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/bin/x64/Release"
      },
      "command": "./xr_3da -nointro -fsltx ${COP_LTX_FILE_PATH}",
      "problemMatcher": []
    },
  ]
}
